<p id="notice"><%= notice %></p>

<%= form_tag(controller: "friends", action: "display", :method => "post", id: "search-form") do %>
<!--When the search button is clicked, the action display in the controller is called using the HTTP method post since we are sending form data! -->
<%= text_field_tag  :search, params[:search], placeholder: "Search Friends" %>  <!--this creates a text field where the user will enter what theyâ€™re searching for -->
<%= submit_tag  "Search" %>
<% end %>


<h1>Friends List</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <!--  User-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% for friend in current_user.friends %>
      
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.email %></td>
          <!--<td> friend.user_id </td> -->
          <td><%= link_to 'Show', friend %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    
  </tbody>
</table>

